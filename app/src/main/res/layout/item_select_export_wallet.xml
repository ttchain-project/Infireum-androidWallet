<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/padding_1"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_18"
        android:src="@mipmap/wallet_coin_btc_small" />

    <TextView
        android:id="@+id/textViewWalletName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/padding_14"
        android:layout_marginEnd="@dimen/padding_18"
        android:layout_marginBottom="@dimen/padding_14"
        android:layout_weight="1"
        android:drawableEnd="@mipmap/btn_next"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        tools:text="錢包一號"
        android:textColor="@color/_354252"
        android:textSize="@dimen/sp_14" />

</LinearLayout>