<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeSnow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="actionModeBackground">@color/blue_500</item>
        <item name="itemBackground">@color/blue_500</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeSnow.Toolbar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/grey_700</item>
    </style>

    <style name="Button.Snow">
        <item name="colorAccent">@color/grey_200</item>
    </style>

    <style name="Button.Trans.Snow">
        <item name="colorAccent">@color/grey_200_trans</item>
    </style>

    <style name="Button.SnowLight">
        <item name="colorAccent">@color/grey_50</item>
    </style>

    <style name="Button.Trans.SnowLight">
        <item name="colorAccent">@color/grey_50_trans</item>
    </style>

    <style name="Button.SnowDark">
        <item name="colorAccent">@color/grey_400</item>
    </style>

    <style name="Button.Trans.SnowDark">
        <item name="colorAccent">@color/grey_400_trans</item>
    </style>

    <style name="Button.White.SnowLight">
        <item name="android:textColorPrimaryInverse">@color/grey_50</item>
    </style>

    <style name="Button.White.Snow">
        <item name="android:textColorPrimaryInverse">@color/grey_200</item>
    </style>

    <style name="Button.White.SnowDark">
        <item name="android:textColorPrimaryInverse">@color/grey_400</item>
    </style>

    <style name="TextSnowLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <style name="TextSnow" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="TextSnowDeep" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="HintTextSnow" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/grey_200</item>
    </style>

</resources>