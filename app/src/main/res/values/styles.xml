<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryTheme" parent="@style/ThemeSnow" />

    <style name="ThemeSnow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="actionModeBackground">@color/blue_500</item>
        <item name="itemBackground">@color/blue_500</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="containerLayoutStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="RecordTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@null</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabTextAppearance">@style/TabRecordTextAppearance</item>
        <!--<item name="tabMaxWidth">2000dp</item>-->
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="tabPaddingStart">13dp</item>
        <item name="tabPaddingEnd">13dp</item>

        <item name="android:layout_height">24dp</item>
        <item name="tabGravity">center</item>

        <!--<item name="tabMode">scrollable</item>-->
    </style>

    <style name="TabRecordTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RecordTabLayoutStyle.RedEnvelope">
        <item name="tabIndicatorColor">@color/azure</item>
    </style>

</resources>
