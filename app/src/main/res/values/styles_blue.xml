<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="actionModeBackground">@color/blue_500</item>
        <item name="itemBackground">@color/blue_500</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeBlue.Toolbar">
        <item name="colorControlNormal">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/blue_500</item>
        <item name="actionMenuTextColor">@color/blue_500</item>
        <item name="colorAccent">@color/grey_300</item>
    </style>

    <style name="Button.Blue">
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <style name="Button.Trans.Blue">
        <item name="colorAccent">@color/blue_500_trans</item>
    </style>

    <style name="Button.BlueLight">
        <item name="colorAccent">@color/blue_300</item>
    </style>

    <style name="Button.Trans.BlueLight">
        <item name="colorAccent">@color/blue_500_trans</item>
    </style>

    <style name="Button.BlueDark">
        <item name="colorAccent">@color/blue_700</item>
    </style>

    <style name="Button.DeepBlue">
        <item name="colorAccent">@color/deep_blue_700</item>
    </style>

    <style name="Button.Trans.BlueDark">
        <item name="colorAccent">@color/blue_700_trans</item>
    </style>

    <style name="Button.White.BlueLight">
        <item name="android:textColorPrimaryInverse">@color/blue_300</item>
    </style>

    <style name="Button.White.Blue">
        <item name="android:textColorPrimaryInverse">@color/blue_500</item>
    </style>

    <style name="Button.White.BlueDark">
        <item name="android:textColorPrimaryInverse">@color/blue_700</item>
    </style>

    <style name="TextBlueLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_300</item>
    </style>

    <style name="TextBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="TextBlueDeep" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <style name="HintTextBlue" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/blue_500</item>
    </style>

    <style name="TextDeepBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDeepBlue</item>
    </style>

</resources>